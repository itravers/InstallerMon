
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal" >

        <RelativeLayout
            android:id="@+id/activity_survey_relativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" >

            <TextView
                android:id="@+id/activity_survey_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:paddingTop="6dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="@string/survey_activity_header_text"
                />

            <ImageView
                android:id="@+id/activity_survey_imageView1"
                android:layout_width="170dp"
                android:layout_height="75dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/dplogo" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_survey_relativeLayout1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp" >

            <Button
                android:id="@+id/activity_survey_clickToSurveyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="@string/activity_survey_clickToSurveyButtonText" 
                android:onClick="clickToSurvey"/>

        </RelativeLayout>

    </RelativeLayout>